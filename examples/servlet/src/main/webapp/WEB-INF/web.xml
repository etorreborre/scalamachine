<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

  <filter>
    <filter-name>ScalamachineFilter</filter-name>
    <filter-class>scalamachine.servlet.ScalamachineFilter</filter-class>
    <init-param>
      <param-name>routes</param-name>
      <param-value>code.ExampleRoutes</param-value>
    </init-param>
    <init-param>
      <param-name>runner</param-name>
      <param-value>scalamachine.core.v3.WebmachineV3Runner$</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>ScalamachineFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>
